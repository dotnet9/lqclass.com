                        <Path
                            Width="16"
                            Data="{StaticResource QqGeometry}"
                            Fill="{DynamicResource PrimaryBrush}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Command="hc:ControlCommands.OpenLink"
                    CommandParameter="mailto:632871194@qq.com"
                    Header="{x:Static langs:Lang.Email}">
