                        <Path
                            Width="16"
                            Data="{StaticResource EmailGeometry}"
                            Fill="{DynamicResource WarningBrush}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Command="hc:ControlCommands.OpenLink"
                    CommandParameter="http://lqclass.com/"
                    Header="{x:Static langs:Lang.Foreground}">
