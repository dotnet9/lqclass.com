                        <Image Source="/Images/SysBackground.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Command="hc:ControlCommands.OpenLink"
                    CommandParameter="http://api.lqclass.com/swagger/index.html"
                    Header="Web API">
                    <MenuItem.Icon>
                        <Image Source="/Images/SysWebAPI.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Command="{Binding RaiseShowDialogCommand}"
                    CommandParameter="About"
                    Header="{x:Static langs:Lang.About}">
                    <MenuItem.Icon>
                        <Path
                            Width="16"
                            Data="{StaticResource InfoGeometry}"
                            Fill="{DynamicResource SuccessBrush}" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Height="29" Header="{x:Static langs:Lang.Recommendation}">
                <MenuItem Header="{x:Static langs:Lang.Website}"
                    Command="{Binding RaiseShowDialogCommand}"
                    CommandParameter="Web" >
