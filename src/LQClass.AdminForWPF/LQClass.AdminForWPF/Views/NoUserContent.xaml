                        <Image Source="/Images/SysForeground.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Command="hc:ControlCommands.OpenLink"
                    CommandParameter="http://admin.lqclass.com/"
                    Header="{x:Static langs:Lang.Background}">
