<UserControl
    x:Class="LQClass.ModuleOfLog.Views.MainTabItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18="clr-namespace:LQClass.ModuleOfLog.I18nResources"
    xmlns:local="clr-namespace:LQClass.ModuleOfLog.Views"
    xmlns:markup="clr-namespace:WpfExtensions.Xaml.Markup;assembly=WpfExtensions.Xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <materialDesign:Card Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal">
                    <Button
                        Command="{Binding CopyToClipboardCommand, Mode=OneTime}"
                        CommandParameter="{Binding ElementName=KindsListBox, Path=SelectedValue}"
                        Style="{StaticResource SearchButton}" />
                    <Button
                        Command="{Binding CopyToClipboardCommand, Mode=OneTime}"
                        CommandParameter="{Binding ElementName=KindsListBox, Path=SelectedValue}"
                        Style="{StaticResource ClearButton}" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <materialDesign:Card Grid.Row="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>
                <DataGrid
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding DeviceTemplateDtos}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding DeviceType}" Header="设备类型" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding ProjectName}"
                            Header="类型" />
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding APName}"
                            Header="模块" />
                        <DataGridTextColumn
                            Width="180"
                            Binding="{Binding PUID}"
                            Header="动作" />
                        <DataGridTextColumn
                            Width="180"
                            Binding="{Binding PUID}"
                            Header="ITCode" />
                        <DataGridTextColumn
                            Width="180"
                            Binding="{Binding PUID}"
                            Header="Url" />
                        <DataGridTextColumn
                            Width="180"
                            Binding="{Binding PUID}"
                            Header="操作时间" />
                        <DataGridTextColumn
                            Width="180"
                            Binding="{Binding PUID}"
                            Header="时长" />
                        <DataGridTextColumn
                            Width="180"
                            Binding="{Binding PUID}"
                            Header="IP" />
                        <DataGridTextColumn
                            Width="180"
                            Binding="{Binding PUID}"
                            Header="备注" />
                        <DataGridTextColumn
                            Width="180"
                            Binding="{Binding PUID}"
                            Header="操作" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
