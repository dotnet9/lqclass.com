<UserControl
    x:Class="LQClass.ModuleOfHome.Views.MainTabItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18="clr-namespace:LQClass.ModuleOfHome.I18nResources"
    xmlns:lqclass="clr-namespace:LQClass.CustomControls.Controls;assembly=LQClass.CustomControls"
    xmlns:markup="clr-namespace:WpfExtensions.Xaml.Markup;assembly=WpfExtensions.Xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding Header}" />
        <Grid Width="300" Height="60">
            <lqclass:SwitchButton CheckedText="lqclass.com" Text="dotnet9.com" IsChecked="True"/>
        </Grid>
        <TextBlock
            FontSize="50"
            FontWeight="Bold"
            Foreground="Red"
            Text="{markup:I18n {x:Static i18:Language.MainTabItemView_Header}}" />
    </StackPanel>
</UserControl>
