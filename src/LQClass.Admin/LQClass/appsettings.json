{
  "Logging": {
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Information",
        "WalkingTec": "Debug"
      }
    },
    "Debug": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Information",
        "WalkingTec": "Debug"
      }
    },
    "WTM": {
      "LogLevel": {
        "Default": "Debug"
      }
    },
      "LogLevel": {
        "Default": "Debug"
      }
  },
  "ConnectionStrings": [
    {
      "Key": "default",
      "Value": "Data Source=lqclass_com.db"
    }
  ],
  "DBType": "SQLite", //DataBase, you can choose mysql,sqlserver,pgsql,sqlite,oracle
  "IsOldSqlServer":  false,//If you are using .netcore 2.x, setting this to true will support sql server 2008
  "CookiePre": "LQClass", //cookie prefix
  "IsQuickDebug": true, //is debug mode
  "CorsOptions": {
    "EnableAll": true,
    "Policy": [
      {
        "Name": "Default",
        "Domain": "http://localhost,https://localhost"
      }
    ]
  },
  "ErrorHandler": "/_Framework/Error",
  "Languages":"en,zh",
  "UIOptions": {
    "DataTable": {
      "RPP": 20, //default records per page for all datagrid
      "ShowPrint": true,
      "ShowFilter": true
    },
    "ComboBox": {
      "DefaultEnableSearch": true 
    },
    "DateTime": {
      "DefaultReadonly": true 
    },
    "SearchPanel": {
      "DefaultExpand": true 
    }
  },
  "PageMode": "Tab", //display mode，Single or Tab
  "TabMode": "Simple", //Tab mode，Default or Simple
  "IsFilePublic": false,//Can download or view attachment file without login
  "FileUploadOptions": {
    "UploadLimit": 20971520,
    "SaveFileMode": "Database", //file attachment mode: Database,local or dfs
    "UploadDir": ""    //when file attachment mode is local, set path on your disk
  },
  "DFSServer": {
    "StorageMaxConnection": 100,
    "TrackerMaxConnection": 100,
    "ConnectionTimeout": 100,
    "ConnectionLifeTime": 100,
    "Trackers": [
      {
        "IP": "127.0.0.1",
        "Port": 22122
      }
    ]
  },
  "JwtOptions": {
    "Issuer": "http://localhost",
    "Audience": "http://localhost",
    "Expires": 3600,
    "SecurityKey": "superSecretKey@345",
    "RefreshTokenExpires": 86400,
    "LoginPath": "/Login/Login"
  },
  "CookieOptions": {
    "Issuer": "http://localhost",
    "Audience": "http://localhost",
    "Expires": 3600,
    "SlidingExpiration": true,
    "SecurityKey": "superSecretKey@345",
    "RefreshTokenExpires": 86400,
    "LoginPath": "/Login/Login"
  },
  "Domains": {
    "github": {
      "Address": "https://api.github.com"
    }
  },
  "AppSettings": {
    "key1":"value1",
    "key2":"value2"
  }
